{
  "manifest_version": 3,
  "name": "Crypto Currency Converter",
  "version": "1.0",
  "description": "Real-time cryptocurrency and fiat currency converter with futuristic UI by Adam",
  "permissions": [
    "storage",
    "activeTab"
  ],
  "host_permissions": [
    "https://api.coingecko.com/*",
    "https://api.exchangerate-api.com/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Crypto Converter",
    "default_icon": {
      "16": "icon.png",
      "48": "icon.png",
      "128": "icon.png"
    }
  },
  "icons": {
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  }
}